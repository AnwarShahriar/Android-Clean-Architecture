<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/brand_green</item>
        <item name="colorAccent">@color/brand_green</item>
        <item name="colorControlActivated">?colorPrimary</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/brand_green</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Widget.NB.BottomNav" parent="@style/Widget.MaterialComponents.BottomNavigationView">

        <item name="itemIconTint">@color/bottom_nav_item</item>
<!--        <item name="itemTextAppearanceActive">@style/TextAppearance.NB.BottomNavigationView.Active</item>-->
<!--        <item name="itemTextAppearanceInactive">@style/TextAppearance.NB.BottomNavigationView</item>-->

<!--        <item name="itemTextColor">@color/bottom_nav_text</item>-->

        <item name="labelVisibilityMode">unlabeled</item>

        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Dark</item>
    </style>

    <style name="TextAppearance.NB.BottomNavigationView.Active">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextAppearance.NB.BottomNavigationView" parent="@style/Widget.MaterialComponents.BottomNavigationView">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textColor">@color/bottom_nav_text</item>
    </style>

</resources>
